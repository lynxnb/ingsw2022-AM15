<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.SepiaTone?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.eriantys.gui.controllers.ConnectionController">
    <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" opacity="0.5" preserveRatio="true">
         <image>
            <Image url="@../assets/misc/background.jpg" />
         </image>
         <effect>
            <SepiaTone />
         </effect>
      </ImageView>
        <TextField fx:id="serverIpField" layoutX="227.0" layoutY="139.0" promptText="insert server ip" />
        <TextField fx:id="serverPortField" layoutX="226.0" layoutY="175.0" promptText="insert server port" />
        <Button fx:id="backButton" layoutX="226.0" layoutY="212.0" mnemonicParsing="false" onAction="#backButtonAction" prefHeight="20.0" prefWidth="73.0" text="back" />
        <Button fx:id="confirm" layoutX="301.0" layoutY="212.0" mnemonicParsing="false" onAction="#confirmButtonAction" prefHeight="20.0" prefWidth="73.0" text="confirm" />
        <Label fx:id="errorMessage" alignment="CENTER" layoutX="197.0" layoutY="245.0" opacity="0.0" prefHeight="17.0" prefWidth="209.0" text="Label" textFill="#ae1212">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <TextField fx:id="nicknameField" layoutX="227.0" layoutY="106.0" prefHeight="25.0" prefWidth="94.0" promptText="nickname" />
    </children>
</AnchorPane>
